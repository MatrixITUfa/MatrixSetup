<Window x:Class="Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Installer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="next1_btn" HorizontalAlignment="Left" Margin="661,360,0,0" VerticalAlignment="Top" Height="45" Width="114" Click="Button_Click" FontSize="22" FontWeight="Normal">
            <Button Content="Next" Height="33" Width="58"/>
        </Button>
        <Button x:Name="btn_browseinstalljava" Content="Browse" HorizontalAlignment="Left" Margin="508,192,0,0" VerticalAlignment="Top" Height="25" Width="114" Click="selectfile_btn_Click"/>
        <TextBox x:Name="txtbox_javapath" HorizontalAlignment="Left" Margin="89,192,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="384" Height="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="89,147,0,0" Text="Java" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="29"/>
        <Button x:Name="btn_javainstall" Content="Установить" HorizontalAlignment="Left" Margin="89,251,0,0" VerticalAlignment="Top" Click="btn_javainstall_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="89,222,0,0" Text="если не указывать путь, то Java по умолчанию установится в Program Files" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="btn_test" Content="test" HorizontalAlignment="Left" Margin="281,346,0,0" VerticalAlignment="Top" Click="btn_test_Click"/>

    </Grid>
</Window>
