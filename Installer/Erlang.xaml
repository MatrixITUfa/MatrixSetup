<Page x:Class="Installer.Erlang"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Installer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Erlang" Background="White">

    <Grid>
        <TextBlock x:Name="txt_JavaInstall" HorizontalAlignment="Left" Margin="89,23,0,0" Text="Установка Erlang" TextWrapping="Wrap" VerticalAlignment="Top" Height="57" Width="311" FontSize="40"/>
        <TextBlock x:Name="txt_Neo4jDescription" HorizontalAlignment="Left" Margin="89,222,0,0" Text="Нажимайте Next, оставьте стандартные найстройки" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="17"/>
        <Button x:Name="next3_btn" HorizontalAlignment="Left" Margin="661,360,0,0" VerticalAlignment="Top" Height="45" Width="114" FontSize="22" FontWeight="Normal" Click="next3_btn_Click">
            <Button Content="Next" Height="33" Width="58"/>
        </Button>
        <Button x:Name="btn_ErlangInstall" Content="Установить Erlang" HorizontalAlignment="Left" Margin="89,265,0,0" VerticalAlignment="Top" Width="151" Height="45" FontSize="17" Click="btn_ErlangInstall_Click"/>

        <Frame x:Name="Erl"/>
    </Grid>
</Page>
