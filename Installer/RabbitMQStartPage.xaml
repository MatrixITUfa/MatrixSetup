<Window x:Class="Installer.RabbitMQStartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Installer"
        mc:Ignorable="d"
        Title="RabbitMQStartPage" Height="378" Width="848" ResizeMode="NoResize">
    <Grid>
        <TextBlock x:Name="txt_RabbitInstall" HorizontalAlignment="Left" Margin="40,42,0,0" Text="Установка" TextWrapping="Wrap" VerticalAlignment="Top" Height="57" Width="386" FontSize="40"/>
        <Button x:Name="btn_RabbitInstall" Content="Установить" HorizontalAlignment="Left" Margin="40,269,0,0" VerticalAlignment="Top" Width="193" Height="45" FontSize="17" Click="btn_RabbitInstall_Click"/>
        <TextBlock x:Name="txt_RabbitDescription" HorizontalAlignment="Center" Text="Нажмите на 'Установить'. Подождите. Не закрывайте программу до появления сообщения об окончании установки." TextWrapping="Wrap" VerticalAlignment="Center" FontSize="17" Width="768"/>
        <Label x:Name="lbl_taskProgress" Content="" HorizontalAlignment="Left" Margin="424,229,0,0" VerticalAlignment="Top" Width="361"/>
        <ProgressBar x:Name="prgbar_taskProgress" HorizontalAlignment="Left" Height="25" Margin="426,279,0,0" VerticalAlignment="Top" Width="359" Visibility="Hidden"/>

    </Grid>
</Window>
